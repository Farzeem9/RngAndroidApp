<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#f7f7f7"
    android:id="@+id/container"
    tools:context=".EditAdActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:minHeight="?attr/actionBarSize"
        app:titleTextColor="@color/white"/>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scrolv"
        >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Relativel"
            >
            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="20dp"
                android:paddingBottom="15dp">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="120dp">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:id="@+id/ll_pics"
                        android:orientation="horizontal"
                        android:weightSum="12">

                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="120dp"
                            android:background="#ffffff"
                            android:id="@+id/btn_select"
                            android:layout_toRightOf="@+id/view"
                            android:src="@android:drawable/ic_menu_gallery"
                            android:layout_weight="6"
                            />
                        <View
                            android:layout_width="1dp"
                            android:layout_height="match_parent"
                            android:id="@+id/view"
                            android:background="@android:color/darker_gray"
                            />
                        <ImageButton
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:background="#ffffff"
                            android:id="@+id/btn_capture"
                            android:src="@android:drawable/ic_menu_camera"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentStart="true"
                            android:layout_weight="6"/>

                    </LinearLayout>

                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_marginTop="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <android.support.v7.widget.RecyclerView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/btn_capture"
                        android:layout_marginTop="20dp"
                        android:orientation="horizontal"
                        android:visibility="invisible"
                        app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                        android:id="@+id/rr"
                        />
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="10dp"
                        android:spinnerMode="dropdown"
                        android:id="@+id/sp_types"
                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_pname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                        <EditText
                            android:id="@+id/input_pname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:paddingTop="10dp"
                            android:paddingBottom="15dp"
                            android:hint="Product Name" />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_pdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                        <EditText
                            android:id="@+id/input_pdesc"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="textMultiLine"
                            android:hint="Please write a short Description"
                            android:minLines="3"
                            />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_page"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                        <EditText
                            android:id="@+id/input_page"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Product Age"
                            android:paddingTop="10dp"
                            android:paddingBottom="15dp"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">
                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_prent"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="10dp">

                        <EditText
                            android:id="@+id/input_prent"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Product Rent"
                            android:paddingTop="10dp"
                            android:paddingBottom="15dp"/>
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/input_layout_pdeposit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp">

                        <EditText
                            android:id="@+id/input_pdeposit"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:inputType="text"
                            android:hint="Product Deposit"
                            android:paddingTop="10dp"
                            />
                    </android.support.design.widget.TextInputLayout>
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_marginTop="5dp"
                    android:layout_height="wrap_content"
                    >
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginLeft="5dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/loc"
                            android:text="Location: "
                            android:gravity="center_vertical"
                            android:textSize="18sp" />
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="16sp"
                            android:layout_toRightOf="@id/loc"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/tv_city" />
                        <Button
                            android:layout_width="100dp"
                            android:layout_height="wrap_content"
                            android:background="@color/red"
                            android:text="Location"
                            android:textColor="#ffffff"
                            android:textSize="13sp"
                            android:layout_marginLeft="10dp"
                            android:id="@+id/btn_location"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="20dp"/>
                    </RelativeLayout>
                </android.support.v7.widget.CardView>
                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="10dp"
                        android:spinnerMode="dialog"
                        android:id="@+id/sp_rent_types"
                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                    <Spinner
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:layout_marginTop="10dp"
                        android:paddingBottom="15dp"
                        android:paddingTop="10dp"
                        android:spinnerMode="dialog"
                        android:id="@+id/sp_rent_subtypes"
                        />
                </android.support.v7.widget.CardView>

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp">
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="18sp"
                        android:id="@+id/tv_cust"
                        android:layout_marginTop="10dp"
                        android:layout_marginLeft="5dp"
                        android:text="Customer can rent for"/>
                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:id="@+id/rent_view"
                        android:layout_marginTop="3dp"
                        android:layout_below="@+id/tv_cust"
                        android:background="@android:color/darker_gray"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Day(s)"
                        android:layout_below="@+id/rent_view"
                        android:textScaleX="1"
                        android:id="@+id/days"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:textSize="20sp"
                        android:textColor="@color/cardview_dark_background"/>
                    <CheckBox
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Week(s)"
                        android:layout_below="@+id/days"
                        android:textScaleX="1"
                        android:id="@+id/weeks"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:textSize="20sp"
                        android:textColor="@color/cardview_dark_background"/>

                    <CheckBox
                        android:id="@+id/month"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Month(s)"
                        android:layout_below="@id/weeks"
                        android:textScaleX="1"
                        android:scaleX="0.8"
                        android:scaleY="0.8"
                        android:textSize="20sp"
                        android:textColor="@color/cardview_dark_background"/>
                </RelativeLayout>
              </android.support.v7.widget.CardView>
                <Button android:id="@+id/btn_signup"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="Submit My Ad"
                    android:background="@color/red"
                    android:layout_marginTop="15dp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@android:color/white"/>

            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#000000"
        android:id="@+id/rel1">
        <android.support.v4.view.ViewPager
            android:id="@+id/pager"
            android:layout_gravity="center"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        </android.support.v4.view.ViewPager>
        <Button
            android:id="@+id/thumb_button_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/red"
            android:text="Set as Thumbnail"
            android:contentDescription="avc"
            android:visibility="gone"
            android:layout_centerHorizontal="true"
            android:layout_alignParentBottom="true"
            android:src="@android:mipmap/sym_def_app_icon"
            android:hapticFeedbackEnabled="true"
            />
    </RelativeLayout>
</FrameLayout>