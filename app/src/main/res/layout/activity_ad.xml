<?xml version="1.0" encoding="utf-8"?>
 <LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
>
    <android.support.v7.widget.Toolbar
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/red"
        android:id="@+id/toolbar"
        android:theme="@color/darkred"
        app:titleTextColor="@color/white"
        app:title="RnG"
        />

    <ScrollView
        xmlns:custom="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f7f7f7"
        tools:context="com.androidbelieve.drawerwithswipetabs.AdActivity">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <com.androidbelieve.drawerwithswipetabs.SliderLayout
            android:id="@+id/slider"
            android:layout_width="match_parent"
            custom:pager_animation="Accordion"
            custom:auto_cycle="true"
            custom:indicator_visibility="visible"
            custom:pager_animation_span="1100"
            android:background="#f7f7f7"
            android:layout_height="400dp"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/slider"
        android:paddingLeft="10dp"
        android:background="#f7f7f7"
        android:paddingRight="10dp"
        android:paddingBottom="15dp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/slider"
        custom:contentPadding="10dp"
        android:id="@+id/cv_ad"
        android:layout_marginTop="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f7f7f7"
            android:paddingTop="10dp"
            android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:id="@+id/tv_name"
            android:textColor="#000000"
            android:paddingLeft="10dp"
            android:textStyle="bold"
            />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="15sp"
                android:id="@+id/tv_subcat"
                android:layout_below="@id/tv_name"
                android:textColor="@color/black"
                android:paddingLeft="10dp"
                android:layout_marginTop="5dp"
                />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_subcat"
            android:id="@+id/tv_rent"

            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/orange"
            android:textStyle="bold"
            />
            <TextView
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:text="Date"
             android:id="@+id/tv_date"
             android:textColor="#000000"
             android:layout_below="@+id/tv_location"
             android:textSize="13sp"
             android:paddingLeft="10dp"
             android:layout_marginTop="5dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="City"
                android:textSize="15sp"
                android:paddingLeft="10dp"
                android:textColor="#000000"
                android:id="@+id/tv_location"
                android:layout_below="@+id/tv_rent"
                />
        </RelativeLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cv_ad"
        custom:contentPadding="10dp"
        android:layout_marginTop="10dp"
        android:id="@+id/cv_description">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#f7f7f7"
        android:paddingTop="10dp"
        android:paddingBottom="10dp">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Description"
            android:paddingRight="20dp"
            android:paddingLeft="10dp"
            android:paddingTop="10dp"
            android:textSize="16sp"
            android:textColor="#000000"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:id="@+id/tv_desc"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            android:paddingLeft="10dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Age"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Age"
            android:id="@+id/tv_prod_age"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Deposit"
            android:textSize="16sp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:textColor="#000000"/>
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Product Deposit"
            android:id="@+id/tv_prod_dep"
            android:textSize="15sp"
            android:layout_marginTop="5dp"
            />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Allowed Rent period"
                    android:paddingRight="20dp"
                    android:paddingLeft="10dp"
                    android:paddingTop="10dp"
                    android:textSize="16sp"
                    android:textColor="#000000"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/crent"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    android:paddingLeft="10dp"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Preferable rent period"
                    android:textSize="16sp"
                    android:layout_marginLeft="10dp"

                    android:textColor="#000000"/>
                <TextView
                    android:layout_marginLeft="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:id="@+id/tv_max_rent"
                    android:textSize="15sp"
                    android:layout_marginTop="5dp"
                    />
        </LinearLayout>
        </android.support.v7.widget.CardView>
                <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="10dp"
            android:background="@android:color/darker_gray"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="20sp"
            android:gravity="center"
            android:textColor="#000000"
            android:text="Rating and Comments"/>
        <RatingBar
            android:id="@+id/ratingBar1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:isIndicator="true"
            android:layout_marginTop="10dp" />
        <Button
            android:id="@+id/btn_rate_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignLeft="@+id/ratingBar1"
            android:layout_below="@+id/ratingBar1"
            android:layout_gravity="center"
            android:onClick="onRateAndComment"
            android:layout_marginTop="15dp"
            android:textColor="#000000"
            android:text="Rate And Comment" />
        <!--LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="12">
        <Button
            android:id="@+id/bshare"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Share"
            android:onClick="onShare"
            android:drawableLeft="@android:drawable/ic_menu_share"
            android:textSize="12sp"
             />

        <Button
            android:id="@+id/bwish"
            android:layout_width="0dp"
            android:layout_weight="6"
            android:layout_height="wrap_content"
            android:text="Add to Wishlist"
            android:drawableLeft="@android:drawable/star_big_off"
            android:textSize="12sp" />
        </LinearLayout-->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="5dp"
            android:background="@android:color/darker_gray"/>
        <RadioGroup
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/rg_period"
            android:focusable="true"
            android:layout_marginTop="5dp">

            <RadioButton
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:id="@+id/less"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:id="@+id/equal"
                />
            <RadioButton
                android:layout_width="match_parent"
                android:focusable="true"
                android:layout_height="wrap_content"
                android:id="@+id/more"
                />
        </RadioGroup>
        <LinearLayout
            android:id="@+id/ll"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_alignParentBottom="true"
            android:weightSum="12"
            >
            <Button
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Rent Now"
                android:onClick="onUrgentRent"
                android:id="@+id/btn_rent"
                android:background="@color/orange"
                android:layout_marginRight="5dp"
                android:textColor="@color/white"
                android:layout_weight="12"
                />
        </LinearLayout>

    </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</LinearLayout>