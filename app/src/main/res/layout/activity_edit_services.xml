<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.androidbelieve.drawerwithswipetabs.EditServiceActivity"
    android:id="@+id/container"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_marginTop="20dp"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="120dp">
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:id="@+id/ll_pics">
                    <ImageButton
                        android:layout_width="160dp"
                        android:layout_height="match_parent"
                        android:background="#ffffff"
                        android:id="@+id/btn_capture"
                        android:src="@android:drawable/ic_menu_camera"
                        />
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:id="@+id/view"
                        android:layout_toRightOf="@+id/btn_capture"
                        android:background="@android:color/darker_gray"/>

                    <ImageButton
                        android:layout_width="160dp"
                        android:layout_height="120dp"
                        android:background="#ffffff"
                        android:id="@+id/btn_select"
                        android:layout_toRightOf="@+id/view"
                        android:src="@android:drawable/ic_menu_gallery"
                        />

                </RelativeLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <android.support.v7.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/btn_capture"
                    android:layout_marginTop="20dp"
                    android:orientation="horizontal"
                    android:visibility="invisible"
                    app:layoutManager="android.support.v7.widget.LinearLayoutManager"
                    android:id="@+id/rr"
                    />
            </android.support.v7.widget.CardView>
            <!-- TODO: Update blank fragment layout -->
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp"
                    android:spinnerMode="dialog"
                    android:id="@+id/sp_types"
                    />
            </android.support.v7.widget.CardView>
            <!--FrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:layout_marginTop="5dp"
                android:id="@+id/fl_subcategory"/-->

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">
                <Spinner
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left|center_vertical"
                    android:layout_marginTop="10dp"
                    android:paddingBottom="15dp"
                    android:paddingTop="10dp"
                    android:spinnerMode="dialog"
                    android:id="@+id/sp_subtypes"
                    />
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_pname"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/input_pname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="text"
                        android:paddingTop="10dp"
                        android:paddingBottom="15dp"
                        android:hint="Service Name" />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp">
                <android.support.design.widget.TextInputLayout
                    android:id="@+id/input_layout_pdesc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingBottom="10dp">

                    <EditText
                        android:id="@+id/input_pdesc"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textMultiLine"
                        android:hint="Please write a short Description"
                        android:minLines="3"
                        />
                </android.support.design.widget.TextInputLayout>
            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                >
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="5dp">

                    <TextView
                        android:layout_marginBottom="10dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/tv_lll"
                        android:text="Links"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <ListView
                android:layout_marginTop="10dp"
                android:id="@+id/lv_links"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="gone">

            </ListView>
            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_marginTop="10dp"
                android:layout_height="wrap_content"
                >
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Location"
                    />
            </android.support.v7.widget.CardView>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:text="SEND SERVICE"
                android:layout_marginBottom="20dp"/>
        </LinearLayout>
    </ScrollView>
    <ImageButton
        android:id="@+id/thumb_button_1"
        android:layout_width="100dp"
        android:layout_height="75dp"
        android:visibility="gone"
        android:layout_marginRight="1dp"
        android:scaleType="centerCrop"
        android:contentDescription="avc"
        android:src="@android:mipmap/sym_def_app_icon"/>

    <ImageView
        android:id="@+id/expanded_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:visibility="invisible"
        android:contentDescription="@string/description_zoom_touch_close" />
</FrameLayout>
